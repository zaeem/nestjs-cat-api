{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@infrastructure/*": ["./infrastructure/*"],
      "@use-cases/*": ["./use-cases/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
